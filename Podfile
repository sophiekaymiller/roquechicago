# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Confirmed' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Confirmed

	# Firebase
    	pod 'Firebase/Core'
   	pod 'Firebase/Database'
    	pod 'Firebase/Auth'
    	pod 'Firebase/Database'
	pod 'FirebaseUI'

	# Facebook
    	pod 'FBSDKCoreKit'
    	pod 'FBSDKLoginKit'
    	pod 'FBSDKShareKit'
	
	# Google
    	pod 'GoogleSignIn'
    	pod 'GooglePlaces'
    	pod 'GooglePlacePicker'
    	pod 'GoogleMaps'

	# Calendar and Booking Interaction
    	pod 'FloatRatingView', '~> 2.0.0'
   	pod 'JTAppleCalendar'

	# Business Managment Frameworks
	pod 'Charts', '~> 3.1'
	pod 'SwiftyStoreKit'
	
	# Credit Card UI and Validation
	pod 'Caishen'

	# Developer Tools
	pod 'Compass'
	pod 'Eureka'
	
	# Random User Testing
	pod 'RandomUserSwift'

	# Bug Reporting
	pod 'Aardvark'

end
